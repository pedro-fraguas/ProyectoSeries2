<%- include('./partials/header') -%>

<link rel="stylesheet" href="/css/detalleDeSerie.css">
<script src="/js/detalleDeSerie.js" charset="utf-8"></script>
<script src="https://kit.fontawesome.com/4cbe2a5007.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css?family=Poiret+One&display=swap" rel="stylesheet">

<link rel="stylesheet" href="/css/modal.css">

<main>
  <div class="infoPrincipal">
    <img class="poster" src="/img/poster-default.png" alt="">
    <div class="tituloDatos">
      <h2 class="tituloPelicula"></h2>
      <button type="button" name="button" class="favorito">AGREGAR FAVORTIO</button>
      <h4 class="datosPrincipales">Genres:</h4>
      <p class="generos"></p>
      <h4 class="datosPrincipales lenguajeOriginal">Original Language: </h4>
      <h4 class="datosPrincipales fechaEstreno">First Air Date: </h4>
      <h4 class="datosPrincipales">Overview:</h4>
      <p class="overview"></p>
      <p id="id"><%= id %></p>
    </div>
  </div>
  <div class="trailer">

  </div>

  <div>
    <% for( let i = 0; i < reviews.length; i++ ) { %>
      <div>
        <h6><%= reviews[i].user.username %> </h6>
        <p><%= reviews[i].message %> </p>
      </div>
    <% } %>
  </div>

  <form action="/" method="POST">
    <input type="text" id="id" value="<%= id %>">
    <textarea name="comment" id="" cols="20" rows="5"></textarea>
    <select name="rating" id="">
      <option value="" disabled selected>Rating</option>
      <% for( let i = 0; i < 10; i++ ) { %>
        <option value=i+1><%= i+1 %> </option>
      <% } %>
    </select>
    <button>Submit Review</button>
  </form>

  <button type="button" class="series-relacionadas" name="series-relacionadas">Ver series relacionadas</button>
  <div class="relacionadas">
    <h3>Relacionadas</h3>
    <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider="sets: true">
      <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m uk-child-width-1-5@l">
        <li class="uk-transition-toggle" tabindex="0">
          <a href="#"><img src="/img/poster-default.png" alt=""></a>
        </li>
        <li class="uk-transition-toggle" tabindex="0">
          <a href="#"><img src="/img/poster-default.png" alt=""></a>
        </li>
